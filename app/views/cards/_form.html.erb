<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="category_field">
    <%= form.label :category %>
    <%= form.select :category, options_for_select(["Gift", "Membership", "Rewards"]) %>
  </div>

  <div class="field" id="company_name_field">
    <%= form.label :company_name %>
    <%= form.text_field :company_name %>
  </div>

  <div class="field" id="amount_field">
    <%= form.label :amount %>
    <%= form.number_field :amount %>
  </div>

  <div class="field" id="expire_field">
    <%= form.label :expire %>
    <%= form.date_field :expire %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
