<p id="notice"><%= notice %></p>
<div class='form'>
   <div class="titleselec">

<h1 class="card-title">Cards</h1>

    <%= select_tag("category", options_for_select(["All", "Gift", "Membership", "Rewards"]), {class: 'form-control form1'}) %>

</div>
<button class="btn btn-danger"><%= link_to "EXPIRED CARDS", cards_expired_path %>  </button>

<table id="myTable" class="row-border">
  <thead>
    <tr class="header">
      <th class='comp'>Company name</th>
      <th class='catagory'>Category</th>
      <th class='amount'>Amount</th>
      <th class='expire'>Expire</th>
    </tr>
  </thead>
  <tbody class='tbodycards'>
    <% @cards.each do |card| %>
      <tr class='card'>
         <td class='card_title'><strong><%= link_to card.company_name, card %></strong></td>
         <td><i><%= card.category %> Card<i></td>
         <td><% if card.amount? %>$<%= card.amount %><% end %></td>
         <td><%= card.expire %></td>
         <!-- <td><%#= link_to 'Edit', edit_card_path(card) %></td> -->
         <!-- <td><%#= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>

    <% end %>
  </tbody>
</table>
</div>
